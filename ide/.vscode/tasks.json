{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Watch TS Errors",
            "type": "shell",
            "command": "tsc",
            "args": [
                "-w",
                "-p",
                ".",
                "--noEmit"
            ],
            "isBackground": true,
            "problemMatcher": "$tsc-watch",
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "start browser sync",
            "type": "shell",
            "command": "./startBrowserSync.sh",
            "isBackground": true,
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "start webpack",
            "type": "npm",
            "script": "develop",
            "isBackground": true,
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}