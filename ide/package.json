{
  "name": "conjure",
  "displayName": "CONJURE",
  "description": "",
  "version": "0.0.1",
  "publisher": "revilotom",
  "engines": {
    "vscode": "^1.36.0"
  },
  "main": "./out/extension",
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "conjure.model",
        "title": "Model",
        "category": "Conjure"
      },
      {
        "command": "conjure.solve",
        "title": "Solve",
        "category": "Conjure"
      },
      {
        "command": "conjure.solveAndVis",
        "title": "Solve and visualise",
        "category": "Conjure"
      },
      {
        "command": "conjure.vis",
        "title": "Launch vis from directory",
        "category": "Conjure"
      },
      {
        "command": "conjure.configure",
        "title": "Configure and run a search",
        "category": "Conjure"
      },
      {
        "command": "conjure.invalidateCaches",
        "title": "Invalidates all tree search caches",
        "category": "Conjure"
      }
    ],
    "languages": [
      {
        "id": "essence",
        "aliases": [
          "Essence",
          "essence"
        ],
        "extensions": [
          ".essence",
          ".eprime",
          ".param",
          ".essence-param",
          ".eprime-param",
          ".solution",
          ".eprime-solution",
          ".essence-solution"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "essence",
        "scopeName": "source.essence",
        "path": "./syntaxes/Essence.tmLanguage"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./ && (cd configiration/ts && npm run develop)",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage --collectCoverageFrom=src/webclient/src/**/*.{ts,tsx}",
    "develop": "webpack --mode development --watch --config-name webview",
    "production": "webpack --mode production",
    "format": "prettier \"src/**/*.{ts,tsx,js,jsx,css,html}\" --write",
    "lint": "tslint \"src/**/*.{ts,tsx,js,jsx}\" --quiet"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/jquery": "^3.3.29",
    "@types/node": "^8.10.49",
    "awesome-typescript-loader": "^5.2.1",
    "css-loader": "^3.0.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "jest": "^24.8.0",
    "jest-fetch-mock": "^2.1.2",
    "prettier": "^1.18.2",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "ts-jest": "^24.0.2",
    "tslint": "^5.8.0",
    "typescript": "^3.5.3",
    "vscode": "^1.1.21",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2"
  },
  "dependencies": {
    "@types/cors": "^2.8.5",
    "@types/d3": "^5.7.2",
    "@types/express": "^4.17.0",
    "@types/jquery.validation": "^1.16.6",
    "@types/lodash": "^4.14.134",
    "@types/node-fetch": "^2.3.5",
    "@types/react": "^16.8.21",
    "@types/react-dom": "^16.8.4",
    "@types/react-select": "^2.0.19",
    "@types/react-splitter-layout": "^3.0.0",
    "@types/rimraf": "^2.0.2",
    "@types/yup": "^0.26.14",
    "@welldone-software/why-did-you-render": "^3.2.0",
    "cors": "^2.8.5",
    "create-html": "^4.1.0",
    "d3": "^5.9.2",
    "express": "^4.17.1",
    "find-free-port": "^2.0.0",
    "formik": "^1.5.7",
    "lodash": "^4.17.11",
    "node-fetch": "^2.6.0",
    "node-object-hash": "^1.4.2",
    "react": "^16.8.6",
    "react-compound-slider": "^2.1.0",
    "react-d3-tree": "^1.13.0",
    "react-dom": "^16.8.6",
    "react-hotkeys": "^2.0.0",
    "react-select": "^3.0.4",
    "react-split": "^2.0.5",
    "react-split-pane": "^0.1.87",
    "react-splitter-layout": "^4.0.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "rimraf": "^2.6.3",
    "shortid": "^2.2.14",
    "tree-kill": "^1.2.1",
    "ts-loader": "^6.0.4",
    "typescript-ioc": "^1.2.5",
    "typescript-rest": "^2.0.0",
    "vinyl-source-stream": "^2.0.0",
    "yup": "^0.27.0"
  },
  "repository": "https://github.com/conjure-cp/conjure/tree/loadcore"
}
