{
    "name": "conjure",
    "displayName": "CONJURE",
    "description": "",
    "version": "0.0.1",
    "publisher": "revilotom",
    "engines": {
        "vscode": "^1.27.0"
    },
    "main": "./out/extension",
    "categories": [
        "Programming Languages",
        "Formatters"
    ],
    "activationEvents": [
        "*"
    ],
    "contributes": {
        "commands": [
            {
                "command": "conjure.model",
                "title": "Model",
                "category": "Conjure"
            },
            {
                "command": "conjure.solve",
                "title": "Solve",
                "category": "Conjure"
            },
            {
                "command": "conjure.solveAndVis",
                "title": "Solve and visualise",
                "category": "Conjure"
            },
            {
                "command": "conjure.vis",
                "title": "Launch vis from directory",
                "category": "Conjure"
            },
            {
                "command": "conjure.configure",
                "title": "Configure and run a search",
                "category": "Conjure"
            }
        ],
        "languages": [
            {
                "id": "essence",
                "aliases": [
                    "Essence",
                    "essence"
                ],
                "extensions": [
                    ".essence",
                    ".eprime",
                    ".param",
                    ".essence-param",
                    ".eprime-param",
                    ".solution",
                    ".eprime-solution",
                    ".essence-solution"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "essence",
                "scopeName": "source.essence",
                "path": "./syntaxes/Essence.tmLanguage"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./ && (cd configiration/ts && npm run develop)",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/jquery": "^3.3.29",
        "@types/node": "^8.10.36",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "webpack": "^4.25.1",
        "webpack-cli": "^3.1.2"
    },
    "dependencies": {
        "@types/mocha": "^5.2.6",
        "@types/request": "^2.48.1",
        "@types/request-promise-native": "^1.0.16",
        "chai": "^4.2.0",
        "create-html": "^4.1.0",
        "node-object-hash": "^1.4.2",
        "request": "^2.88.0",
        "request-promise-native": "^1.0.7",
        "rimraf": "^2.6.3",
        "typescript-rest": "^2.0.0",
        "vinyl-source-stream": "^2.0.0",
        "vsce": "^1.59.0"
    }
}
