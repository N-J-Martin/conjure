language Essence 1.3

given n_periods_middle: int(1..100)
given n_periods_delta: int(0..49)
find n_periods: int(1..100)
such that
    n_periods >= n_periods_middle - n_periods_delta,
    n_periods <= n_periods_middle + n_periods_delta
given n_periods_plus_middle: int(0..100)
given n_periods_plus_delta: int(0..50)
find n_periods_plus: int(0..100)
such that
    n_periods_plus >= n_periods_plus_middle - n_periods_plus_delta,
    n_periods_plus <= n_periods_plus_middle + n_periods_plus_delta
given crew_range_middle: int(1..100)
given crew_range_delta: int(0..49)
find crew: function int(1..200) --> int(1..100)
such that
    and([q1 >= 1 /\ q1 <= n_periods + n_periods_plus <-> q1 in defined(crew) | q1 : int(1..200)]),
    and([q1[2] >= crew_range_middle - crew_range_delta | q1 <- crew]),
    and([q1[2] <= crew_range_middle + crew_range_delta | q1 <- crew])
given crew_plus_range_middle: int(0..100)
given crew_plus_range_delta: int(0..50)
find crew_plus: function int(1..200) --> int(0..100)
such that
    and([q2 >= 1 /\ q2 <= n_periods + n_periods_plus <-> q2 in defined(crew_plus) | q2 : int(1..200)]),
    and([q2[2] >= crew_plus_range_middle - crew_plus_range_delta | q2 <- crew_plus]),
    and([q2[2] <= crew_plus_range_middle + crew_plus_range_delta | q2 <- crew_plus])
